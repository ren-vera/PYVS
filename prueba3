import random
from hoja_funciones import *
menu = True




def buscar_reservas_por_numero(numero):
    encontradas = [reserva for reserva in num_reservas if reserva == numero]
    if encontradas:
        print(f"Reservas encontradas para el número {numero}:")
        for reserva in encontradas:
            print(reserva)
    else:
        print(f"No se encontraron reservas para el número {numero}.")

def mostrar_reservas():
    if num_reservas:
        print("Reservas ingresadas:")
        for reserva in num_reservas:
            print(reserva)
    else:
        print("No se han ingresado reservas.")





print("=====Bienvenidos a Te Paseo=====")
