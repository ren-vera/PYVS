        fin_paseo(lugar_fin)
        
        numero_mascotas = int(input("\nIngrese la cantidad de mascotas a pasear: "))
        if numero_mascotas < 1 or numero_mascotas > 5:
            print("\nNo se puede pasear esa cantidad de mascotas")
            cant_masc.append
        else:
            print("")
        
        nomb_dueño = input("\nIngrese nombre del dueño: ")
        nombre_cliente(nomb_dueño)
        
        def reserva(numer_reservas):
            numero_reserva = random.randint(1000,10000)
            num_reservas.append(numer_reservas)
            print("su número de reserva es: ",numero_reserva)





    if opcion == 2:
        print("Ha seleccionado: Buscar")
        numero = input("Ingrese el número de reserva a buscar: ")
        buscar_reservas_por_numero(numero)


